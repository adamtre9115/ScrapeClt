{{>navbar}}

<section id="header">
    <div class="jumbotron text-center">
        <h1 class="display-4">Scrape CLT</h1>
        <hr class="my-4">
        <p class="lead">Get the latest news around the Queen City Now!
        </p>
    </div>
</section>

<section id="featured">
    <div class="container">
        <div class="articles">
            {{#if articles}} {{#each articles}}
            <div class="card">
                <div class="card-header">
                    <h4 class="title">{{title}}</h4>
                </div>
                <div class="card-body">

                    <p class="summary card-text">{{summary}}</p>
                    <a href="{{link}}" target="_blank" class="btn btn-primary link">Visit Article</a>
                    <a href="#" name="{{_id}}" class="btn btn-primary saveBtn">
                        <span>
                            <i class="far fa-bookmark"></i>
                        </span> Save it</a>
                </div>
            </div>
            {{/each}} {{else}}
            <div class="card">
                <div class="card-header text-center">
                    <h3>Looks like we don't have any articles yet
                        <span>
                            <i class="far fa-frown"></i>
                        </span>
                    </h3>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</section>

{{> footer}}