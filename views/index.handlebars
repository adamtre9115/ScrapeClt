<section id="featured">
    <div class="container">
        {{#if articles}} {{#each articles}}
        <div class="card">
            <div class="card-header">
                <h4>{{title}}</h4>
            </div>
            <div class="card-body">

                <p class="card-text">{{summary}}</p>
                <a href="{{link}}" class="btn btn-primary">Visit Article</a>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="card">
            <div class="card-header text-center">
                <h3>Looks like we don't have any articles yet
                    <span>
                        <i class="far fa-frown"></i>
                    </span>
                </h3>
            </div>
        </div>
        {{/if}}
    </div>
</section>