<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Comment Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="comments">
                {{#if this.comments}} {{#each this.comments}}
                <div class="card">
                    <div class="card-body">
                        <div class="col-6">
                            <p>{{this.comment}}</p>
                            <button class="btn btn-danger">
                                <span>
                                    <i class="far fa-trash-alt"></i>
                                </span>
                            </button>

                        </div>
                    </div>
                </div>
                {{/each}} {{/if}}
            </div>
            <div class="modal-body col-12">
                <p>Don't be shy. Leave a comment...</p>
                <textarea class="cmtTxt" cols="30" rows="10" width="100"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>