<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="commModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Comment Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="comments">
                {{#if this.comments}} {{#each this.comments}}
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-10">
                                <p>
                                    <b>{{this.name}}</b>
                                </p>
                                <p>{{this.comment}}</p>
                            </div>

                            <div class="col-md-2">
                                <button id="del{{this._id}}" data-id="{{this.id}}" class="btn btn-danger comDelBtn">
                                    <span>
                                        <i class="far fa-trash-alt"></i>
                                    </span>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}} {{/if}}
            </div>
            <div class="modal-body col-12">
                <p>Don't be shy. Leave a comment...</p>
                <label for="name{{this.id}}">Name</label>
                <input type="text" name="input{{this.id}}" id="name{{this.id}}" class="nameCmt form-control" placeholder="Care to leave your name?"
                    required>
                <textarea class="cmtTxt  form-control" id="text{{this.id}}" name="textArea{{this.id}}" cols="30" rows="10" placeholder="Leave a comment"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>